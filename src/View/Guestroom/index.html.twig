{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Guestrooms</h1>
    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th></th>
                <th>Titre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for guestroom in guestrooms %}
        <tr class="table">
            <td>{% if guestroom.disabled == 1 %}<i class="fas fa-check"></i>{% endif %}</td>
            <td>{{ guestroom.title }}</td>
            <td>
                <a href="/guestroom/show/{{ guestroom.id }}" class="btn btn-primary">Montrer</a>
                <a href="/guestroom/edit/{{ guestroom.id }}" class="btn btn-warning">Editer</a>
            </td>
        </tr>    
        {% else %}
        <tr>
            <td>Rien Ã  afficher</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    
    
    
    <a href="/guestroom/add" class="btn btn-primary">Ajouter une chambre</a>
{% endblock %}
