{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Ajouter une photo</h1>

    {% if message %}
    <div class="alert alert-danger" role="alert">
        {{ message }}
    </div>
    {% endif %}
    


    <form method="post" enctype="multipart/form-data">
    <input type="hidden" value="{{ media.id }}" name="id">
    
    <div class="form-group mt-3">
        <label for="file" class="form-label mt-2">Sélectionner la photo : </label>
        <input type="file" class="form-control" name="file" id="file" multiple required>
    </div>
    <div class="form-group mt-3">
        <label for="title" class="form-label mt-2">Légende : </label>
        <input type="text" class="form-control" name="title" id="title" required>
    </div>
    <div class="row form-switch mt-3 ms-0">
        <input type="checkbox" class="form-check-input" name="featured" id="featured" >
        <label for="featured" class="form-check-label">Mise en avant </label>
    </div>

    <div class="form-group mt-3">
        <label for="guestroom_select" class="form-label mt-2">Chambre : </label>
        <select class="form-select" name="guestroom_select" id="guestroom_select" required>
            <option value="">--Choisissez une chambre--</option>
            {% for guestroom in guestrooms %}
            <option value="{{ guestroom.id }}">{{ guestroom.title }}</option>
            {% endfor %}

        </select>
    </div>
    

    
    
    <input type="submit" class="btn btn-primary mt-3" value="Enregistrer">
</form>
<a href="/media" class="btn btn-primary mt-3">Retour à la liste des photos</a>


{% endblock %}
