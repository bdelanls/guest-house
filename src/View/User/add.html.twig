{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Nouvel utilisateur</h1>
    <form method="post">
    <input type="hidden" value="{{ user.id }}" name="id">
    
    <div class="form-group mt-3">
        <label for="firstname" class="form-label mt-2">Prénom : </label>
        <input type="text" class="form-control" name="firstname" id="firstname" required>
    </div>
    <div class="form-group mt-3">
        <label for="lastname" class="form-label mt-2">nom : </label>
        <input type="text" class="form-control" name="lastname" id="lastname" required>
    </div>
    <div class="form-group mt-3">
        <label for="login" class="form-label mt-2">Login : </label>
        <input type="text" class="form-control" name="login" id="login" required>
    </div>
    <div class="form-group mt-3">
        <label for="password" class="form-label mt-2">Mot de passe : </label>
        <input type="password" class="form-control" name="password" id="password" required>
    </div>
    <div class="form-group mt-3">
        <label for="email" class="form-label mt-2">Email : </label>
        <input type="email" class="form-control" name="email" id="email" required>
    </div>
    <div class="form-group mt-3">
        <label for="phone" class="form-label mt-2">Téléphone : </label>
        <input type="text" class="form-control" name="phone" id="phone" required>
    </div>
    {% if appUser.role == 1 %}
    <div class="form-group mt-3">
        <label for="role_id" class="form-label mt-2">Role : </label>
        <select class="form-select" name="role_id" id="role_id" required>
            <option value="">-- Choisissez un role --</option>
            <option value="1">Admin</option>
            <option value="2">Client</option>
        </select>
    </div>
    {% endif %}
    
    <input type="submit" class="btn btn-primary mt-5" value="Enregistrer">
</form>
{% if appUser.role == 1 %}
<a href="/user" class="btn btn-primary mt-3">Retour à la liste</a>
{% endif %}

{% endblock %}
