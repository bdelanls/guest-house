{% extends 'layout.html.twig' %}

{% block content %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>
    <ul class="list-group list-group-flush mt-5">
        <li class="list-group-item">Prénom : {{ user.firstname }}</li>
        <li class="list-group-item">Nom : {{ user.lastname }}</li>
        <li class="list-group-item">Login : {{ user.login }}</li>
        <li class="list-group-item">Email : {{ user.email }}</li>
        <li class="list-group-item">Téléphone : {{ user.phone }}</li>
    </ul>

    <a href="/user/edit/{{ user.id }}" class="btn btn-primary mt-5">Editer</a>
    <a data-bs-toggle="modal" data-bs-target="#suppModal" class="btn btn-danger mt-5">Supprimer</a>

    <div class="modal fade" id="suppModal" tabindex="-1" aria-labelledby="suppModalLabel" aria-hidden="true">  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Supprimer le compte de {{ user.firstname }} {{ user.lastname }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Êtes-vous sur de vouloir supprimer l'utilisateur ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        <a href="/user/delete/{{user.id}}" class="btn btn-danger">Supprimer définitivement</a>
      </div>
    </div>
  </div>
</div>

   

{% endblock %}
