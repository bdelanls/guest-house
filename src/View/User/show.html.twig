{% extends 'layout.html.twig' %}

{% block content %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>
    <ul class="list-group list-group-flush mt-5">
        <li class="list-group-item">Prénom : {{ user.firstname }}</li>
        <li class="list-group-item">Nom : {{ user.lastname }}</li>
        <li class="list-group-item">Login : {{ user.login }}</li>
        <li class="list-group-item">Email : {{ user.email }}</li>
        <li class="list-group-item">Téléphone : {{ user.phone }}</li>
    </ul>

    <a href="/user/edit/{{ user.id }}" class="btn btn-primary mt-5">Editer</a>
    <a href="/user/delete/{{user.id}}" class="btn btn-danger mt-5">Supprimer</a>
    <br>
    <a href="/user" class="btn btn-primary mt-5">Retour à la liste</a>
{% endblock %}
