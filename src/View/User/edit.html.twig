{% extends 'layout.html.twig' %}

{% block content %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>
        <form method="post">
    <input type="hidden" value="{{ user.id }}" name="id">
    
    <div class="form-group mt-3">
        <label for="firstname" class="form-label mt-2">Prénom : </label>
        <input type="text" class="form-control" value="{{ user.firstname }}" name="firstname" id="firstname" required>
    </div>
    <div class="form-group mt-3">
        <label for="lastname" class="form-label mt-2">nom : </label>
        <input type="text" class="form-control" value="{{ user.lastname }}" name="lastname" id="lastname" required>
    </div>
    <div class="form-group mt-3">
        <label for="login" class="form-label mt-2">Login : </label>
        <input type="text" class="form-control" value="{{ user.login }}" name="login" id="login" required>
    </div>
    <div class="form-group mt-3">
        <label for="password" class="form-label mt-2">Mot de passe : </label>
        <input type="password" class="form-control" name="password" id="password">
    </div>
    <div class="form-group mt-3">
        <label for="email" class="form-label mt-2">Email : </label>
        <input type="email" class="form-control" value="{{ user.email }}" name="email" id="email" required>
    </div>
    <div class="form-group mt-3">
        <label for="phone" class="form-label mt-2">Téléphone : </label>
        <input type="text" class="form-control" value="{{ user.phone }}" name="phone" id="phone" required>
    </div>
    
    
    <input type="submit" class="btn btn-primary mt-3" value="Mettre à jour">
</form>
<br>
    <a href="/user" class="btn btn-primary">Retour à la liste des utilisateurs</a>
{% endblock %}
