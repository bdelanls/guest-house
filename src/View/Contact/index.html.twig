{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Contacts</h1>

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th>Date</th>
                <th>Nom</th>
                <th>email</th>
                <th>Sujet</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
        <tr class="table">
            <td>{{ contact.date }}</td>
            <td>{{ contact.name }}</td>
            <td>{{ contact.email }}</td>
            <td>{{ contact.subject }}</td>
            <td>
                <a href="/contact/show/{{ contact.id }}" class="btn btn-primary">Voir le message</a>
                <a data-bs-toggle="modal" data-bs-target="#suppModal" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>    
        {% else %}
        <tr>
            <td>Rien à afficher</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal fade" id="suppModal" tabindex="-1" aria-labelledby="suppModalLabel" aria-hidden="true">  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Supprimer le compte de {{ contact.firstname }} {{ contact.lastname }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Êtes-vous sur de vouloir supprimer ce message ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        <a href="/contact/delete/{{contact.id}}" class="btn btn-danger">Supprimer définitivement</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
